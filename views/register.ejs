<%- include('./layouts/header') %>

<% if (locals.errors && locals.errors.length > 0) { %>
  <div class="alert alert-danger">
    <ul>
      <% locals.errors.forEach(function(error) { %>
        <li><%= error %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<% if (locals.success && locals.success.length > 0) { %>
  <div class="alert alert-success">
    <ul>
      <% locals.success.forEach(function(success) { %>
        <li><%= success %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<form action="/auth/Register" method="post" class="RegisterForm">

  <h1 style="color: #c6171b;" class="RegisterHeading">REGISTRATION</h1>
  <hr class="colored-hr">

    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email_id" name="email_field" aria-describedby="emailHelp">
      
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" id="password_id1" name="password_field1">
    </div>

    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="password_id2" name="password_field2">
    </div>
    
    <button type="submit" class="btn btn-primary custom-btn">REGISTER</button>
    <p class="spanText"> Already have an account ? <span> <a href="/auth/Login"> Login </a>  </span></p>

    
    <a href="#" class="icon-link">
    <img src="/ORCIDiD.png" class="">
     Create or connect your ORCID iD
    </a>

  

</form>

  

<%- include('./layouts/footer') %>